<div class="container">
	{{#if promotion }}
	<div class="card card-body">
		<h3 class="text-primary">Promotions Available</h3>
		{{#each promotion}}
		<div class="card border-primary mb-2 w-100 mx-auto">
			<div class="card-header">
				<h5 class="card-title">{{headline}}</h5>
				<p>Description: {{description}}</p>
				<br>
				<p>Code: {{code}}</p>
			</div>
		</div>

		<div class="col-sm-12 col-md-12 col-lg-2">
			<p>
				<a href="/promos/editPromotion/{{id}}" class="card-link mb-2">
					<i class="fas fa-pencil-alt"></i>
					Edit
				</a>
			</p>
			<p>
				<a href="/promos/deletePromotion/{{id}}" class="card-link" data-toggle="confirmation"
					data-title="Confirm delete?">
					<i class="far fa-trash-alt"></i>
					Delete
				</a>
			</p>
		</div>
		<!-- {{#if admin}} -->
		
		<!--  {{/if}} -->
		{{/each}}
	</div>
	{{else}}
	<h3>No Promotion Available</h3>
	{{/if}}
</div>

<script>
	$('[data-toggle=confirmation]').confirmation({
		rootSelector: '[data-toggle=confirmation]',
	});
</script>